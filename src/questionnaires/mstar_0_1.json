                      "id": "warn_aws_monitor_logs_cloudfront_waf",
                      "why": "Explain why CloudFront logs are not sent to S3:",
                      "warn": "yes",
                      "cond": "app_aws_monitor_logs_cloudfront_waf_no || (app_aws_cloudfront_waf_yes && app_aws_monitor_cloudtrail_no)",
